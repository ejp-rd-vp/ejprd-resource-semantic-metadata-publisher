@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix : <http://example.org/rules/> .
@prefix schema: <http://schema.org/> .
@prefix afrl:   <http://purl.allotrope.org/ontologies/rol#> .
@prefix sio:    <http://semanticscience.org/resource/> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix iao:    <http://purl.obolibrary.org/obo/> .
@prefix ejp:    <http://purl.org/ejp-rd/vocabulary/> .
@prefix obo: <http://purl.obolibrary.org/obo/> .
@prefix dcat:   <http://www.w3.org/ns/dcat#> .

:TriplesMap a rr:TriplesMap;
            rml:logicalSource [
                  rml:source "A";
                  rml:referenceFormulation ql:JSONPath;
                  rml:iterator "$.location[*]"
              ].

:TriplesMap rr:predicateObjectMap [
                                      rr:predicate rdf:type;
                                      rr:objectMap [
                                                       rr:constant ejp:Location
                                                   ]
                                  ].

:TriplesMap rr:subjectMap [
                              rr:template "http://example.org/location/{id}";
                              rr:class ejp:location
                          ].


:TriplesMap rr:predicateObjectMap [
                                      rr:predicate obo:street;

                                      rr:objectMap [
                                                       rml:reference "streetAddress"
                                                   ]
                                  ].

:TriplesMap rr:predicateObjectMap [
                                      rr:predicate sio:city;
                                      rr:objectMap [
                                                       rml:reference "city";

                                                   ]
                                  ].

:TriplesMap rr:predicateObjectMap [
                                      rr:predicate obo:code;
                                      rr:objectMap [
                                                       rml:reference "code"
                                                   ]
                                  ].

:TriplesMap rr:predicateObjectMap [
                                      rr:predicate sio:country;
                                      rr:objectMap [
                                                       rml:reference "country"
                                                   ]
                                  ].

:TriplesMap rr:predicateObjectMap [
                              rr:predicate dcat:continent;
                              rr:objectMap [
                                              rml:reference "location.continent"
                                            ]
                                  ].